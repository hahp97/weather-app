{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "swc": true
  },
  "include": ["src/**/*.*"],
  "exclude": ["**/__tests__/**", "**/*.test.ts", "**/*.spec.ts", "jest", "jest.config.js"]
}
