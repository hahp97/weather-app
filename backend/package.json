    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "dotenvx run -- npx ts-node src/database/seed.ts",
    "schema": "./prisma"
  }
}
