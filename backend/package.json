{
  "name": "weather-report-backend",
  "version": "1.0.0",
  "description": "Weather Report Backend with Node.js, Express, Apollo, TypeScript, and MongoDB",
  "scripts": {
    "dev": "yarn db:push && npx nodemon src/index.ts",
    "start": "dotenvx run -- node dist/index.js",
    "build": "yarn db:push && yarn tsc && yarn tsc-alias",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "db:seed": "dotenvx run -- npx prisma db seed",
    "db:push": "dotenvx run -- npx prisma db push",
    "prebuild": "npx rimraf dist && yarn db:push",
    "postbuild": "yarn copy-assets-files",
    "copy-assets-files": "copyfiles -u 1 ./src/**/*.{json,pdf,jpg,png,jpeg,html,ejs,css} dist",
    "test": "dotenvx run -- jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@apollo/utils.keyvadapter": "^4.0.0",
    "@dotenvx/dotenvx": "^1.41.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/schema": "^10.0.23",
    "@keyv/redis": "^4.3.3",
    "@prisma/client": "^6.6.0",
    "@swc/core": "^1.11.21",
    "@tsconfig/node18": "^18.2.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/ejs": "^3.1.5",
    "@types/nodemailer": "^6.4.17",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.10",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "express": "^5.1.0",
    "express-slow-down": "^2.0.3",
    "graphql": "^16.10.0",
    "graphql-redis-subscriptions": "^2.7.0",
    "graphql-relay": "^0.10.2",
    "graphql-scalars": "^1.24.2",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "5.11.2",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^5.3.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.15.0",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.9",
    "otpauth": "^9.4.0",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "prisma-extension-soft-delete": "^2.0.1",
    "regenerator-runtime": "^0.14.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "ws": "^8.18.1",
